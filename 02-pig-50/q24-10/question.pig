data = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);


filtro = foreach data generate SUBSTRING(birthday,5,7);

store filtro into 'output' USING PigStorage(' ');